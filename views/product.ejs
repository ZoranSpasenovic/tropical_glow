<!DOCTYPE html>
<html lang="sr">
  <%- include("layout/head.ejs") %>
  <body>
    <%- include("layout/header.ejs") %>
    <section class="product_details-section">
      <div class="product_detail-container">
        <div class="product_detail-img">
          <img
            loading="lazy"
            src="/assets/pictures/products/<%=product.image%>.webp"
            alt="<%= product.name %>"
          />
          <span class="package"><%=product.package%><%=product.unit%></span>
          <% if(product.amount < 1) { %>
          <p class="product_detail-out_of_stock">Nema na stanju</p>
          <% } else { %>
          <div data-nosnippet class="product_detail-add_container">
            <div class="qty_container">
              <i class="fa-solid fa-minus"></i>

              <input value="1" type="number" class="qty_value" />
              <i class="fa-solid fa-plus"></i>
            </div>
            <button
              data-id="<%=product.id%>"
              data-price="<%=product.price%>"
              data-name="<%=product.name%>"
              class="product_detail-button"
              id="add-to-cart"
            >
              <span class="material-symbols-outlined"> shopping_cart </span>
              Dodaj u Korpu
            </button>
          </div>

          <% } %>
        </div>
        <div class="product_detail-content">
          <h1 class="product_detail-title"><%= product.name %></h1>
          <% if(product.sale) { %>
          <p class="product_detail-original_price"><%= product.price %> RSD</p>
          <p class="product_detail-sale_price"><%= product.sale_price %> RSD</p>
          <% } else { %>
          <p class="product_detail-price"><%= product.price %> RSD</p>
          <% } %>

          <div class="product_detail-content_container">
            <ul class="product_detail-content_list">
              <li class="product_detail-list_item" data-id="1">
                Opis i Efekti
              </li>
              <li class="product_detail-list_item" data-id="2">Tip Kože</li>
              <li class="product_detail-list_item" data-id="3">
                Način Upotrebe
              </li>
              <li class="product_detail-list_item" data-id="4">
                Prirodni Aktivni Sastojci
              </li>
              <li class="product_detail-list_item" data-id="5">Sastav</li>
            </ul>
            <div class="product_detail-text">
              <button class="product_detail-back_btn">
                <i class="fa-solid fa-chevron-left"></i>
                <span></span>
              </button>
              <p class="details" id="effects-details"><%= product.effects %></p>
              <p class="details" id="skin-details"><%= product.skin %></p>
              <p class="details" id="use-details"><%= product.use %></p>
              <ul class="details list" id="natural-details">
                <% for(const key in naturalIngredients) { %>
                <span><%=key%></span>
                <li><%=naturalIngredients[key]%></li>
                <%}%>
              </ul>
              <p class="details" id="ingrd-details">
                <%= product.ingredients %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <%- include("layout/footer.ejs") %>
  </body>
</html>
